<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<!--Shows welcome window when apllication starts. It provides options to go to new window for creating new timetable or 
    to window of saved timetables. It also provides exit button.-->

<VBox alignment="CENTER" prefHeight="450.0" prefWidth="580.0" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="welcome.WelcomeController">
   <children>
      <Button mnemonicParsing="false" onAction="#newTimetable" prefHeight="60.0" prefWidth="400.0" text="New Timetable" textAlignment="CENTER">
         <VBox.margin>
            <Insets bottom="30.0" left="60.0" right="60.0" top="30.0" />
         </VBox.margin>
      </Button>
      <Button mnemonicParsing="false" onAction="#savedTimetable" prefHeight="60.0" prefWidth="400.0" text="Saved Timetable" textAlignment="CENTER">
         <VBox.margin>
            <Insets bottom="30.0" left="60.0" right="60.0" top="30.0" />
         </VBox.margin>
      </Button>
      <Button mnemonicParsing="false" onAction="#exitProgram" prefHeight="60.0" prefWidth="400.0" text="Exit" textAlignment="CENTER">
         <VBox.margin>
            <Insets bottom="30.0" left="60.0" right="60.0" top="30.0" />
         </VBox.margin>
      </Button>
            
   </children>
</VBox>
